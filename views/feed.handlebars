{{#if posts.length}}
<div class="col-md-6 posts-list mt-5">

    {{#each posts as |post|}}
    <div class="row mb-2 ">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{post.title}}</h4>
                <p class="card-text">{{post.body}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}