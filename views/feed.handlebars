{{#if posts.length}}
<div class="col-md-6 posts-list mt-5">

    {{#each posts as |post|}}
    <div class="row mb-2 ">
        <div class="card">
            <div class="card-body">
                <a class="card-title" href="./posts/{{post.id}}">{{post.title}}</a>
                <p class="card-text">{{post.body}}</p>
                <p class="author"><i>{{post.User.username}}</i></p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}